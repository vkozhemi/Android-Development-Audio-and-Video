<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/sound1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/sound2"/>
    <Button
            android:text="@string/sound2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound2" app:layout_constraintStart_toEndOf="@+id/sound1"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/sound3"/>
    <Button
            android:text="@string/sound3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound3" app:layout_constraintStart_toEndOf="@+id/sound2"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/sound4"/>
    <Button
            android:text="@string/sound4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sound4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/sound3" app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>